---
import Layout from "@layouts/Layout.astro";
import Footer from "@components/Footer.astro";
import { homepage } from "@content/homepage";
import Features from "@components/Features.astro";
---

<Layout>
  <section class="grid py-10 place-items-center text-center">
    <h1 class="sm:text-4xl text-3xl font-bold mb-6 dark:text-white">GitHub Tips</h1>
    <p>An Open Source initiative to share Git and GitHub Tips. This is not an Official GitHub website.</p>
  </section>
  {homepage.map((homepage) => <Features title={homepage.title} icon={homepage.icon} content={homepage.content} />)}
  <Footer />
</Layout>
